---
import type { PageInfo } from '@/lib/relations';

interface Props {
  breadcrumbs: PageInfo[];
  currentSlug: string;
}

const { breadcrumbs, currentSlug } = Astro.props;

// Don't render if no breadcrumbs or only current page
if (breadcrumbs.length <= 1) {
  return null;
}

function getHref(slug: string): string {
  return slug === 'index' ? '/' : `/${slug}/`;
}
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {breadcrumbs.map((page, index) => {
      const isLast = index === breadcrumbs.length - 1;
      const isHome = page.slug === 'index';
      const label = isHome ? 'Home' : page.title;
      
      return (
        <li class="breadcrumb-item">
          {!isLast ? (
            <>
              <a href={getHref(page.slug)} class="breadcrumb-link">
                {label}
              </a>
              <span class="breadcrumb-separator" aria-hidden="true">/</span>
            </>
          ) : (
            <span class="breadcrumb-current" aria-current="page">
              {label}
            </span>
          )}
        </li>
      );
    })}
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: theme(spacing.4);
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: theme(spacing.1);
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: theme(fontSize.sm);
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: theme(spacing.1);
  }

  .breadcrumb-link {
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-duration-fast) var(--ease-out);
  }

  .breadcrumb-link:hover {
    color: var(--color-accent);
  }

  .breadcrumb-separator {
    color: var(--color-text-subtle);
    user-select: none;
  }

  .breadcrumb-current {
    color: var(--color-text-subtle);
  }
</style>
