---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only show h2 and h3
const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <h2 class="toc-title">Contents</h2>
    <ol class="toc-list">
      {tocHeadings.map((heading) => (
        <li class="toc-item" data-depth={heading.depth}>
          <a href={`#${heading.slug}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ol>
  </nav>
)}

<style>
  .toc {
    overflow-y: auto;
    padding-right: var(--sp-4);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
  }

  .toc-title {
    margin-bottom: var(--sp-4);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-subtle);
    border-bottom: none;
    padding-bottom: 0;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    padding-left: var(--sp-3);
    margin: 0;
  }

  .toc-item {
    margin-bottom: var(--sp-2);
  }

  .toc-item[data-depth="3"] {
    padding-left: var(--sp-4);
  }

  .toc-link {
    display: block;
    padding: var(--sp-1) 0;
    color: var(--color-text-muted);
    text-decoration: none;
    line-height: var(--leading-snug);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .toc-link:hover {
    color: var(--color-accent);
  }

  .toc-link.active {
    color: var(--color-accent);
    font-weight: 500;
    position: relative;
  }

  .toc-link.active::before {
    content: '';
    position: absolute;
    left: calc(-1 * var(--sp-3));
    top: 50%;
    transform: translateY(-50%);
    width: 2px;
    height: 1em;
    background-color: var(--color-accent);
    border-radius: var(--radius-full);
  }

  .toc-item[data-depth="3"] .toc-link.active::before {
    left: calc(-1 * var(--sp-3) + var(--sp-4));
  }

  /* Scrollbar styling */
  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 2px;
  }

  .toc::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-subtle);
  }
</style>

<script>
  import '@/scripts/toc-scrollspy';
</script>
